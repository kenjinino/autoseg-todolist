<%= simple_form_for [@todo.todolist, @todo], :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.error_notification %>

  <%= f.input :content, input_html: { rows: 4, maxlength: 500 } %>
  <%= f.input :done %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                todolist_path(@todo.todolist_id), :class => 'btn' %>
  </div>
<% end %>
