<%= simple_form_for @todolist, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.error_notification %>

  <%= f.input :title, input_html: { maxlength: 255 } %>
  <%= f.input :public %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                todolists_path, :class => 'btn' %>
  </div>
<% end %>
